{
    "DATASET_CONFIG": {
        "data_root": "data/",
        "string_pad": 30,
        "ttv_split": [0.8, 0.2, 0.0],
        "initial_set_negatives": 25000,
        "batch_size": 32
    },

    "TRAIN_CONFIG": {
        "lr": 1e-3,
        "n_epochs": 150,
        "epoch_reset": false,
        "A_name": "gru",
        "embedding_type": "one_hot",
        "n_tokens": 30,
        "scheduler_step_size": 3,
        "scheduler_gamma": 1
    },

    "MODEL_KWARGS": {
        "input_size": 26,
        "hidden_size": 50,
        "num_layers": 1,
        "bias": true,
        "batch_first": true,
        "dropout": 0,
        "bidirectional": false
    }
}